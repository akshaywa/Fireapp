<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:divider="@android:color/transparent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/msmessage"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mstime"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_toRightOf="@+id/imageView3"
            android:background="@drawable/message_text_background"
            android:padding="6dp"
            android:text="TextView"
            android:textColor="@color/cardview_light_background"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/msname"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/msmessage"
            android:layout_alignStart="@+id/msmessage"
            android:layout_below="@+id/msmessage"
            android:background="@drawable/message_text_background"
            android:padding="3dp"
            android:text="TextView"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/mstime"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/msmessage"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/msmessage"
            android:background="@drawable/message_text_background"
            android:padding="3dp"
            android:text="TextView"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/msmessage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/msmessage"
            app:srcCompat="@drawable/com_facebook_profile_picture_blank_portrait" />
    </RelativeLayout>
</android.support.v7.widget.CardView>